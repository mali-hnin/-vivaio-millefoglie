<div class="container">

  <div class="banner catalogo-banner" style="background-image:url(<%= asset_path "banner2.jpg" %>)"></div>

  <div class="catalogo-content text-center">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-lg-3">
        <div class="categoria-header">
          Tipologia
        </div>
        <div class="categoria-content">
          <%= link_to "Erbacee perenni", "#" %>
          <%= link_to "Erbacee annuali", "#" %>
          <%= link_to "Graminacee", "#" %>
          <%= link_to "Altro", "#" %></div>
      </div>

      <div class="col-xs-12 col-md-6 col-lg-3">
        <div class="categoria-header">
          Esigenza
        </div>
        <div class="categoria-content">
          <%= link_to "Sole", "#" %>
          <%= link_to "Ombra", "#" %>
          <%= link_to "Mezz'ombra", "#" %>
          <%= link_to "Secco", "#" %>
        </div>
      </div>
      <div class="col-xs-12 col-md-6 col-lg-3">
        <div class="categoria-header">
          Caratteristiche Ornamentali
        </div>
        <div class="categoria-content">
          <div class="dropdown spacing-5">
            <%= link_to 'Stagione della fioritura<i class="fa fa-angle-down" aria-hidden="true"></i>'.html_safe, "#", "data-toggle" => "dropdown"%>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li><%= link_to "Primavera", "#", class: "navbar-wagon-item" %></li>
              <li><%= link_to "Estate", "#", class: "navbar-wagon-item" %></li>
              <li><%= link_to "Autunno", "#", class: "navbar-wagon-item" %></li>
              <li><%= link_to "Inverno", "#", class: "navbar-wagon-item" %></li>
            </ul>
          </div>
          <div class="dropdown spacing-5">
            <%= link_to 'Altezza <i class="fa fa-angle-down" aria-hidden="true"></i>'.html_safe, "#", "data-toggle" => "dropdown"%>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li><%= link_to "Alte", "#", class: "navbar-wagon-item" %></li>
              <li><%= link_to "Medie", "#", class: "navbar-wagon-item" %></li>
              <li><%= link_to "Basse", "#", class: "navbar-wagon-item" %></li>
            </ul>
          </div>
          <%= link_to "Fogliame decorativo", "#" %>
          <%= link_to "Da taglio", "#" %>
        </div>
      </div>
      <div class="col-xs-12 col-md-6 col-lg-3">
        <div class="categoria-header">
          Funzione
        </div>
        <div class="categoria-content">
          <%= link_to "Coprisuolo", "#" %>
          <%= link_to "Per farfalle e insetti", "#" %>
        </div>
      </div>
    </div>
  </div>

  <div class="page-bottom">
   <%= render 'shared/page-bottom' %>
  </div>

  <div class="admin-buttons">
    <p>Pannello Amministratori</p>
    <div>
      <%= link_to "Crea nuova pianta", new_plant_path, class: "btn btn-success" %>
      <%= link_to "Vedi tutto il Catalogo", plants_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
