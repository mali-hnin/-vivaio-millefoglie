<div class="search-bar mobile-column-center">
  <%= form_tag plants_path, method: "get" do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], placeholder: "Cerca una pianta", class: 'searchTerm', remote: true %>
      <button  type="submit" class="btn btn-info btn-sm">
        <i class="fa fa-search"></i>
      </button>
    </div>
  <% end %>
</div>
