<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <img src="images/logo.png" alt="Millefoglie Piante e Giardini">
  </a>

  <!-- Left Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <%= link_to "Home", root_path, class: "navbar-wagon-item navbar-wagon-link uppercase-text" %>
    <%= link_to "Catalogo", catalogo_path, class: "navbar-wagon-item navbar-wagon-link uppercase-text" %>
    <%= link_to "Giardini", root_path, class: "navbar-wagon-item navbar-wagon-link uppercase-text" %>
    <div class="dropdown">
      <%= link_to "Notizie", "", class: "navbar-wagon-item navbar-wagon-link uppercase-text", "data-toggle" => "dropdown" %>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Eventi", "", class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Rassegna Stampa", "", class: "navbar-wagon-item navbar-wagon-link" %></li>
      </ul>
    </div>
    <%= link_to "Contatti & Dove Siamo", "", class: "navbar-wagon-item navbar-wagon-link uppercase-text" %>
  </div>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <%= link_to '<i class="fa fa-shopping-basket" aria-hidden="true"></i> Carrello'.html_safe, "", class: "navbar-wagon-item navbar-wagon-link light-blue-text" %>
    <% if user_signed_in? %>
      <%= link_to destroy_user_session_path, class: "navbar-wagon-item navbar-wagon-link light-blue-text", method: :delete do %>
        <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
        <% end %>
    <% else %>
      <%= link_to "Log In", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link light-blue-text" %>
    <% end %>
  </div>
  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Host</a></li>
        <li><a href="#">Trips</a></li>
        <li><a href="#">Messagese</a></li>
      </ul>
    </div>
  </div>
</div>
