<h4><%= @pagy.count %> risultati</h4>
<div class="row">
  <% @plants.each do |plant| %>
    <div class="col-xs-6 col-md-4">
      <%= render "plants/card", plant: plant %>
    </div>
  <% end %>
</div>
<div class="navigation-box">
  <%= render 'shared/pagination', pagy: @pagy %>
  <%= render 'shared/back_button' %>
  <button onclick="topFunction()" id="topBtn" title="Torna su">&#8679;</button>
</div>