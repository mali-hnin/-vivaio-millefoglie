<%= simple_form_for @plant do |f| %>
  <%= f.input :name, label: "Nome",  required: true, autofocus: true %>
  <%= f.input :photos, label: "Foto", as: :attachinary %>
  <%= f.input :description, label: "Descrizione", class: "text-field-height" %>
  <%= f.input :category, label: "Tipologia",  placeholder: "Tipologia: erbacee perenni/erbacee annuali/graminacee/altro" %>
  <%= f.input :esposizione, label: "Esposizione/Esigenza", placeholder: "Esigenza: sole/ombra/mezz'ombra/secco" %>
  <%= f.input :fioritura, collection: ['Primavera', 'Estate', 'Autunno', 'Inverno'], placeholder: "stagione"%>
  <%= f.input :utile_per, placeholder: "fogliame decorativo/da taglio/coprisuolo/farfalle e insetti" %>
  <%= f.input :altezza, collection: ['Bassa', 'Media', 'Alta']%>
  <%= f.input :terreno %>
  <%= f.input :densità %>
  <%= f.input :vaso %>
  <%= f.input :disponibile, label: "Disponibile?", as: :radio_buttons %>
  <%= f.input :novità, label: "Novità 2019", as: :radio_buttons %>
  <%= f.input :nascondi, as: :radio_buttons %>
  <%= f.input :prezzo %>
  <%= f.button :submit, class: "btn btn-info btn-block" %>
<% end %>

