<!-- Filters -->
<%= form_with(url: plants_path, method: :get, local: true) do |f| %>
  Categoria <%= f.select :category, Plant.options_for_category %>
  Esposizione <%= f.select :esposizione, Plant.options_for_esposizione  %>
  Fioritura <%= f.select :fioritura, Plant.options_for_fioritura %>
  <%= f.submit 'Filtra' %>
  <%= link_to('Reset filters',  ) %>
<% end %>
